<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="viewModel"
            type="com.example.footballapp.model.domain.footballNewsResponse.Article" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="@dimen/margin1x"
        app:cardBackgroundColor="@color/grayDark"
        android:elevation="8dp"
        app:cardCornerRadius="18dp"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_for_news"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="@dimen/margin1x"
                android:layout_marginVertical="@dimen/margin2x"
                tools:src="@tools:sample/avatars"
                />

            <TextView
                android:id="@+id/text_news_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="@dimen/margin1x"
                android:layout_marginVertical="@dimen/margin4x"
                android:maxLines="1"
                android:text="@{viewModel.title}"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2.5x"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_for_news"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Andretti says control, not money, killed Alfa Romeo F1 buy-in - Motorsport.com" />

            <TextView
                android:id="@+id/text_news_description"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@{viewModel.description}"
                android:layout_marginHorizontal="@dimen/margin1x"
                android:layout_marginTop="@dimen/margin1x"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                app:layout_constraintEnd_toEndOf="@+id/text_news_title"
                app:layout_constraintStart_toStartOf="@+id/text_news_title"
                app:layout_constraintTop_toBottomOf="@+id/text_news_title"
                tools:text="It is more about those whom Gareth Southgate leaves out of England squads nowadays and once again the omissions tell their own story among a rich " />

            <TextView
                android:id="@+id/text_last_updated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="@{viewModel.publishedAt}"
                android:textColor="#888383"
                android:textSize="@dimen/txt2x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/text_news_description"
                app:layout_constraintStart_toStartOf="@+id/text_news_description"
                app:layout_constraintTop_toBottomOf="@+id/text_news_description"
                tools:text="2021-11-04T14:56:00Z" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>