<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.example.footballapp.model.domain.teamRankResponse.Standing" />

        <variable
            name="listener"
            type="com.example.footballapp.ui.league.standing.StandInteractionListener" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardBackgroundColor="@color/card_color_gray"
        android:layout_marginTop="@dimen/margin1x"
        android:layout_marginHorizontal="@dimen/margin1x"
        app:cardCornerRadius="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/margin2x"
            android:layout_marginBottom="@dimen/margin2x">

            <TextView
                android:id="@+id/team_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding3x"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/draw"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setTeamName="@{item}"
                tools:ignore="RtlSymmetry"
                tools:text="Real Madrid" />

            <TextView
                android:id="@+id/draw"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/lost"
                app:layout_constraintTop_toTopOf="parent"
                app:setTeamScoreDraw="@{item}"
                tools:text="8" />

            <TextView
                android:id="@+id/lost"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/goalsAgainst"
                app:layout_constraintTop_toTopOf="parent"
                app:setTeamScoreLost="@{item}"
                tools:text="7" />

            <TextView
                android:id="@+id/goalsAgainst"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/goalDifference"
                app:layout_constraintTop_toTopOf="parent"
                app:setTeamScoreGoalAgainst="@{item}"
                tools:text="14" />

            <TextView
                android:id="@+id/goalDifference"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/points"
                app:layout_constraintTop_toTopOf="parent"
                app:setTeamScoreGoalDifference="@{item}"
                tools:text="4" />

            <TextView
                android:id="@+id/points"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setTeamScorePoints="@{item}"
                tools:text="35" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</layout>