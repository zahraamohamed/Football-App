<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.example.footballapp.model.domain.teamRankResponse.Table" />

        <variable
            name="listener"
            type="com.example.footballapp.ui.league.standing.StandInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding1x"
        backgroundTeamByOnClick="@{()->listener.onClickStand(item)"
        app:cardCornerRadius="@dimen/padding3x">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_color">
            <TextView
                android:id="@+id/team_name"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding3x"
                android:text="@{item.team.name}"
                tools:text="Real Madrid"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                app:layout_constraintBottom_toBottomOf="@+id/draw"
                app:layout_constraintEnd_toStartOf="@+id/draw"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/draw"
                android:layout_width="52dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@{item.draw}"
                tools:text="8"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                app:layout_constraintBottom_toBottomOf="@+id/lost"
                app:layout_constraintEnd_toStartOf="@+id/lost"
                app:layout_constraintStart_toEndOf="@id/team_name"
                app:layout_constraintTop_toTopOf="@+id/lost" />
            <TextView
                android:id="@+id/lost"
                android:layout_width="45dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/goalsAgainst"
                app:layout_constraintEnd_toStartOf="@+id/goalsAgainst"
                app:layout_constraintTop_toTopOf="@+id/goalsAgainst"
                app:layout_constraintStart_toEndOf="@id/draw"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                android:gravity="center"
                android:text="@{item.lost}"
                tools:text="7"/>
            <TextView
                android:id="@+id/goalsAgainst"
                android:layout_width="45dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/lost"
                app:layout_constraintBottom_toBottomOf="@+id/goalDifference"
                app:layout_constraintEnd_toStartOf="@+id/goalDifference"
                app:layout_constraintTop_toTopOf="@+id/goalDifference"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                android:gravity="center"
                android:text="@{item.goalsAgainst}"
                tools:text="14"/>
            <TextView
                android:id="@+id/goalDifference"
                android:layout_width="45dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/goalsAgainst"
                app:layout_constraintBottom_toBottomOf="@+id/points"
                app:layout_constraintEnd_toStartOf="@+id/points"
                app:layout_constraintTop_toTopOf="@+id/points"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                android:gravity="center"
                android:text="@{item.goalDifference}"
                tools:text="4"/>
            <TextView
                android:id="@+id/points"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/goalDifference"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/goalDifference"
                android:textColor="@color/white"
                android:textSize="@dimen/txt2x"
                android:gravity="center"
                android:text="@{item.points}"
                tools:text="35"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>