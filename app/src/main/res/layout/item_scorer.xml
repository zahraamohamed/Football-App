<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.example.footballapp.model.domain.scorerRankResponse.Scorer"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/app_color">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/scorerName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/margin2x"
                    android:text="@{item.player}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt3x"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/scorerTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/margin2x"
                    android:text="@{item.team}"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/scorerName"
                    app:layout_constraintTop_toBottomOf="@+id/scorerName"/>


                <TextView
                    android:id="@+id/scorerGoalsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/margin2x"
                    android:text="@{item.numberOfGoals}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt3x"
                    app:layout_constraintBottom_toBottomOf="@+id/scorerName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/scorerName" />

                <View
                    android:id="@+id/lineView"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/scorerGoalsCount"
                    app:layout_constraintStart_toStartOf="@+id/scorerName"
                    app:layout_constraintTop_toBottomOf="@+id/scorerTeam" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>