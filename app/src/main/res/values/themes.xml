<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="teamDetailsImage" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="teamDetails" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/margin2x</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#B3E5E5E5</item>
        <item name="android:textSize">@dimen/txt2x</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>

    </style>
</resources>