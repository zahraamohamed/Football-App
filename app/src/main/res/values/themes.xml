<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="teamDetailsImage" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="teamDetails" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/margin2x</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#B3E5E5E5</item>
        <item name="android:textSize">@dimen/txt2x</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <!-- progress -->
    <style name="progress_bar_style" parent="Widget.AppCompat.ProgressBar">

        <item name="android:indeterminateTint">@color/red</item>
        <item name="android:progressBackgroundTint">@color/red</item>
        <item name="android:progressBackgroundTintMode">@color/red</item>
        <item name="android:progressTint">@color/red</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>


    </style>

    <!-- image error -->
    <style name="image_error_style" parent="">

        <item name="android:indeterminateTint">@color/red</item>
        <item name="android:progressBackgroundTint">@color/red</item>
        <item name="android:progressBackgroundTintMode">@color/red</item>
        <item name="android:src">@drawable/ic_baseline_error_outline_24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>‚Äè
</resources>