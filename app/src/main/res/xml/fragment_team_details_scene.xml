<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/button_backward" />
        <Constraint
            android:id="@+id/match_constraint"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/margin2x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutDescription="@xml/fragment_team_details_scene"
            app:layout_constraintTop_toBottomOf="@+id/view7" />
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_url"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view"
            />

        <Constraint
            android:id="@+id/text_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin1x"
            android:layout_marginHorizontal="@dimen/margin1x"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/txt2x"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginStart="8dp" />

        <Constraint
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin1x"
            android:src="@drawable/ic_phone"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            />

        <Constraint
            android:id="@+id/text_team_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin1x"
            android:layout_marginVertical="@dimen/margin1x"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/txt2x"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:layout_marginStart="8dp" />

        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin1x"
            android:src="@drawable/ic_mail"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="0dp" />

        <Constraint
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin1x"
            android:layout_marginVertical="@dimen/margin1x"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/txt2x"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />
        <Constraint
            android:id="@+id/text_team_founded_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin1x"
            android:gravity="center_horizontal"
            android:text="@{viewModel.teamDetails.toData().founded.toString()}"
            android:textColor="@color/white"
            android:textSize="@dimen/txt2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/image_team"
            app:layout_constraintTop_toBottomOf="@+id/text_team_name"
             />
        <Constraint
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/margin8x"
            android:layout_marginTop="@dimen/margin1x"
            android:alpha="0.25"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_team_founded_year" />


        <Constraint
            android:id="@+id/view7"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/margin8x"
            android:alpha="0.25"
            android:layout_marginVertical="@dimen/margin1x"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@id/imageView5"
            app:layout_constraintEnd_toStartOf="@id/lottieAnimationView"
            app:layout_constraintTop_toBottomOf="@+id/text_team_venue"
            />



    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">


        <Constraint
            android:id="@+id/match_constraint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7"
            android:layout_marginTop="@dimen/margin2x"
            />
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_url"
            android:layout_marginHorizontal="@dimen/margin3x"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />
        <Constraint
            android:id="@+id/image_team"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="@dimen/margin1x"
            android:layout_marginVertical="@dimen/margin3x"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_soccer_team_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_backward"
             />
        <Constraint
            android:id="@+id/text_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@{viewModel.teamDetails.toData().name}"
            android:textColor="@color/white"
            android:textSize="@dimen/txt3x"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_team"
            app:layout_constraintTop_toTopOf="@id/image_team" />

        <Constraint
            android:id="@+id/text_team_founded_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin1x"
            android:gravity="center_horizontal"
            android:text="@{viewModel.teamDetails.toData().founded.toString()}"
            android:textColor="@color/white"
            android:textSize="@dimen/txt2x"
            app:layout_constraintTop_toBottomOf="@+id/text_team_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_team"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/margin8x"
            android:layout_marginTop="@dimen/margin1x"
            android:alpha="0.25"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_team" />
        <Constraint
            android:id="@+id/view7"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/margin8x"
            android:layout_marginVertical="@dimen/margin1x"
            android:alpha="0.25"
            android:background="@color/white"
            app:layout_constraintEnd_toStartOf="@id/lottieAnimationView"
            app:layout_constraintStart_toEndOf="@id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/text_team_venue" />



    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        >
        <OnClick app:touchAnchorId="@id/lottieAnimationView"
            app:dragDirection="dragDown"
            />

    </Transition>
</MotionScene>
